<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ruokalisays">

    <TextView
        android:id="@+id/otsikko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="@string/ruoka"
        android:textAllCaps="true"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/kaloritText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="@string/kalorit"
        android:importantForAutofill="no"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2"
        tools:text="@string/kalorit" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="144dp"
        android:layout_height="227dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otsikko">

        <RadioButton
            android:id="@+id/radioAamiainen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aamiainen" />

        <RadioButton
            android:id="@+id/radioLounas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lounas" />

        <RadioButton
            android:id="@+id/radioPaivallinen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/paivallinen" />

        <RadioButton
            android:id="@+id/radioIltapala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/iltapala" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonRuoka"
        android:layout_width="156dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:text="@string/lisaa_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kaloritText" />
</androidx.constraintlayout.widget.ConstraintLayout>